<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity" >


    <Button
        android:id="@+id/button"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_marginBottom="40dp"
        android:text="@string/ENdialog"
        android:textSize="18sp"
        app:cornerRadius="1000dp"
        app:layout_constraintBottom_toTopOf="@+id/progess"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/snack"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_marginBottom="40dp"
        android:textSize="18sp"
        android:text="@string/ENsnack"
        app:cornerRadius="1000dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/datepickbtn"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_marginBottom="40dp"
        android:text="@string/ENdate"
        app:cornerRadius="1000dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/snack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:visibility="visible"
        app:cornerRadius="1000dp"
        app:indicatorColor="#FFFFFF"
        app:indicatorName="BallTrianglePathIndicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/progess"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_marginBottom="212dp"
        android:textSize="18sp"
        android:text="@string/ENprogess"
        app:cornerRadius="1000dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>